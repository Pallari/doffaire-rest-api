{
  "name": "doffaire",
  "version": "1.0.0",
  "description": "This is a Doffaire REST API developed using node and express with typescript",
  "scripts": {
    "start": "npm run transpile && node ./dist/server.js",
    "build": "npm run transpile && node ./dist/server.js",
    "dev": "concurrently \"npm:watch\" \"npm:serve\"",
    "serve": "nodemon",
    "watch": "tsc -w",
    "transpile": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": ">=16.19.1"
  },
  "keywords": [
    "Node",
    "Typescript",
    "mongodb",
    "javascript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pallari/doffaire-rest-api"
  },
  "homepage": "https://github.com/Pallari/doffaire-rest-api",
  "bugs": {
    "url": "https://github.com/Pallari/doffaire-rest-api/issues"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/helmet": "4.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^22.10.5",
    "@types/winston": "^2.4.4",
    "concurrently": "^6.0.2",
    "nodemon": "^3.1.9",
    "tslint": "^6.1.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "husky": "^9.1.7",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "winston": "^3.17.0"
  },
  "hooks": {
    "pre-commit": "npm run lint"
  }
}
