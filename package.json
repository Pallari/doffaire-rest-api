{
  "name": "doffaire",
  "version": "1.0.0",
  "description": "This is a Doffaire REST API developed using node and express with typescript",
  "scripts": {
    "start": "npm run transpile && node ./dist/server.js",
    "dev": "concurrently \"npm:watch\" \"npm:serve\"",
    "serve": "nodemon ./dist/server.js",
    "watch": "tsc -w",
    "transpile": "tsc",
    "seed": "npm run transpile && node ./dist/src/db/seed.js",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": ">=8.0"
  },
  "keywords": [
    "Node",
    "Typescript",
    "postgresql",
    "javascript"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pallari/doffaire-rest-api"
  },
  "homepage": "https://github.com/Pallari/doffaire-rest-api",
  "bugs": {
    "url": "https://github.com/Pallari/doffaire-rest-api/issues"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "4.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^15.0.1",
    "@types/sequelize": "^4.28.9",
    "@types/winston": "^2.4.4",
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7",
    "tslint": "^6.1.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.6.0",
    "express": "^4.21.2",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.5.0",
    "husky": "^6.0.0",
    "joi": "^17.13.3",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "sequelize": "^6.6.2",
    "winston": "^3.3.3"
  },
  "hooks": {
    "pre-commit": "npm run lint"
  }
}
